{
  "version": 2,
  "builds": [
    {
      "src": "pilgrimage/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9",
        "includeFiles": ["requirements.txt", "pilgrimage/**", "staticfiles/**"]
      }
    },
    {
      "src": "staticfiles/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [ 
    {
      "src": "/(.*)",
      "dest": "pilgrimage/wsgi.py"
    }
  ]
}